{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "classic",
        "target": "es5",
        "lib": ["es5", "es6", "dom"], 
        "jsx": "react",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "coverage",
        "__tests__"
    ]
}